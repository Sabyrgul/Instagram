<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".add.AddFragment">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/add_image1"
        android:background="@drawable/bg_rounded_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="10dp"
        />
    <ImageView
        app:layout_constraintTop_toBottomOf="@id/add_edittext"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:background="@color/purple_200"
        android:layout_height="300dp"
        android:id="@+id/add_image2"/>
    <Button
        android:text="Добавить"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="@color/purple_700"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/add_image2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btn_add"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
    <EditText
        app:layout_constraintTop_toBottomOf="@id/add_image1"
        android:hint="Введите название"
        android:backgroundTint="@color/light_grey01"
        android:layout_margin="20dp"
        android:id="@+id/add_edittext"
        android:paddingHorizontal="12dp"
        android:background="@drawable/bg_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="14dp"
        android:textSize="18sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>