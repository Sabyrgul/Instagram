<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ProfileFragment">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:id="@+id/linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/account"
            android:onClick="onAccountClick"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/joan_of_arc"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_baseline_lock"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"/>
        <ImageView
            android:id="@+id/add_2"
            android:onClick="onAddClick"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_add_24"
            android:layout_marginStart="140dp"/>
        <LinearLayout
            android:onClick="onSettingsClick"
            android:id="@+id/lines"
            android:layout_marginStart="22.5dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20.5dp"
                android:layout_height="2dp"
                android:background="@color/black"/>
            <ImageView
                android:layout_marginVertical="6.5dp"
                android:layout_width="20.5dp"
                android:layout_height="2dp"
                android:background="@color/black"/>
            <ImageView
                android:layout_width="20.5dp"
                android:layout_height="2dp"
                android:background="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/linear_1"
        android:id="@+id/linear_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_marginStart="16dp"

            android:layout_width="88dp"
            android:layout_height="88dp"
            app:cardCornerRadius="250dp"
            app:cardBackgroundColor="@color/light_grey">

            <androidx.cardview.widget.CardView
                android:layout_width="86dp"
                android:layout_height="86dp"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center">

                <ImageView
                    android:onClick="onProfilePictureListener"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:src="@drawable/joan_of_arc"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginHorizontal="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/posts"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27"
                style="@style/profile_number_style"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posts"
                style="@style/profile_text_style"/>
        </LinearLayout>
        <LinearLayout
            android:onClick="onFollowersClick"
            android:layout_marginEnd="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/followers"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="485"
                style="@style/profile_number_style"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Followers"
                style="@style/profile_text_style"/>
        </LinearLayout>

        <LinearLayout
            android:onClick="onFollowingsClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/followings"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="763"
                style="@style/profile_number_style"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Followings"
                style="@style/profile_text_style"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/linear_2"
        android:text="Joan of Arc
        \n(French: Jeanne d'Arc pronounced [ʒan daʁk]; \nc. 1412 – 30 May 1431) is a patron saint of France"
        />

</androidx.constraintlayout.widget.ConstraintLayout>